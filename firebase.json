{
  "hosting": {
    "public": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/ws",
        "run": {
          "serviceId": "party-server",
          "region": "us-central1"
        }
      },
      {
        "source": "/assets/**",
        "run": {
          "serviceId": "party-server",
          "region": "us-central1"
        }
      }
    ]
  },
  "apphosting": {
    "source": "server",
    "backend": {
      "cpu": "GEN_1",
      "app": "partyserver",
      "build": "go build -o partyserver .",
      "start": "./partyserver"
    }
  }
}
